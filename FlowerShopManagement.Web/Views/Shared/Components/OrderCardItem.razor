<div class="card d-flex flex-row w-100">
	<img src="image/flower2.png" class="card-img-top w-25 h-auto"/>
	<div class="card-body d-flex flex-column justify-content-between">
		<div class="d-flex justify-content-between">
			<span class="h4">@orderDetail.Name</span>
			<span class="h6 text-primary">x @orderDetail.Amount</span>
		</div>
		<div class="mt-1 d-flex justify-content-between">
			<span class="h6 text-secondary">@orderDetail.UniPrice</span>
			<span class="h4 fw-bold text-primary">@(orderDetail.UniPrice * orderDetail.Amount)</span>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public ProductModel orderDetail { get; set; } = null!;

	[Parameter]
	public string orderDetailId { get; set; } = null!;
}
