<div class="card d-flex flex-row w-100">
	@*<img src="~/image/@orderDetail.Pictures[0]" class="card-img-left w-35" style="height: 160px;" />*@
	@if (orderDetail != null && orderDetail != null && orderDetail.Pictures != null)
	{
		<img src="image/@orderDetail.Pictures[0]" class="card-img-left w-35" style="height: 160px;" />
	}
	else
	{
		<img src="image/flower2.png" class="card-img-left w-35" style="height: 160px;" />

	}
	<div class="card-body d-flex flex-column justify-content-between">
		<div class="d-flex justify-content-between">
			<p class="h4">@orderDetail.Name</p>
			<p class="h6 text-primary">x @orderDetail.Amount</p>
		</div>
		<div class="d-flex justify-content-between align-items-end">
			<p class="h6 text-color-secondary">$@orderDetail.UniPrice</p>
			<p class="h4 fw-bold text-primary">$@(orderDetail.UniPrice * orderDetail.Amount)</p>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public ProductDetailModel orderDetail { get; set; } = null!;

	[Parameter]
	public string orderDetailId { get; set; } = null!;
}