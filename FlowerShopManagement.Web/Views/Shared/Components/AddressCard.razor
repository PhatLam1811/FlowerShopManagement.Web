
<div class="border border-2 border-app radius-2 px-4 py-3 d-flex mt-4">
	<div class="flex-grow-1">
		@if (inforDelivery.IsDefault)
		{
			<p class="h4 text-secondary mb-3">Default</p>
		}
		<div class="d-flex flex-column gap-3">
			<div class="d-flex align-items-end gap-3">
				<p class="h6">Name:</p>
				<p class="h5 text-primary">@inforDelivery.Name</p>
			</div>
			<div class="d-flex align-items-end gap-3">
				<p class="h6">Phone:</p>
				<p class="h5 text-primary">@inforDelivery.Phone</p>
			</div>
			<div class="d-flex align-items-end gap-3">
				<p class="h6">Address:</p>
				<p class="h5 text-primary">@inforDelivery.Address</p>
			</div>
		</div>
	</div>
	<div class="d-flex flex-column gap-2">
		<button class="btn-no-min btn-secondary">Edit</button>
		<button class="btn-no-min btn-secondary">Remove</button>
	</div>
</div>

@code {
	[Parameter]
	public InforDeliveryModel inforDelivery { get; set; } = null!;
}
