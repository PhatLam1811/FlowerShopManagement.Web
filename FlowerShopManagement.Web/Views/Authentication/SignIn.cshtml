<div class="container">
	<p class="h1 mt-5 text-center">Login</p>

	<div class="d-flex justify-content-center mt-5">
		<form class="h-auto" onsubmit="return validateInput()" style="width: 300px">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Email/Phone Number</label>
				<input type="text" id="Email" name="Email" class="form-control form-control-lg h5 py-3" placeholder="">
			</div>
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Password</label>
				<input type="password" name="Password" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>

			<button class="btn btn-primary mt-5 float-end">Go to App</button>
		</form>
	</div>

	<button class="btn btn-secondary mt-5">Register</button>
</div>

<script>
	function validateInput() {
		var fieldValue = document.getElementById("Email").value;

		var phoneValidation = /^([\+]?84[-]?|[0])?[1-9][0-9]{8}$/;
		var mailValidation = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;

		if (fieldValue.match(phoneValidation)) {
			// correct phone structure
			alert("true");
			return true;
		} else if (fieldValue.match(mailValidation)) {
			// correct mail format
			alert("true");
			return true;
		} else {
			alert("sai format");
			// incorrect structure
			return false;
		}
	}
</script>