@model RegisterModel;

<div class="container">
	<p class="h1 mt-5 text-center">Register</p>

	<div class="d-flex justify-content-center mt-5">
		<form class="h-auto" method="post" asp-action="Register" asp-controller="Authentication" style="width: 300px">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Email</label>
				<input type="email" id="ip-email" asp-for="Email"  class="form-control form-control-lg h5 py-3" placeholder="">
			</div>
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Phone Number</label>
				<input type="tel" id="ip-phone" asp-for="PhoneNumber"  class="form-control form-control-lg h5 py-3" placeholder="">
			</div>
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Password</label>
				<input type="password" id="ip-password" asp-for="Password"  class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Confirm Password</label>
				<input type="password" id="ip-confirmpassword" asp-for="ConfirmPassword" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>

			<button class="btn btn-primary mt-5 float-end" id="btn-submit">Submit</button>
		</form>
	</div>

	<button class="btn btn-secondary mt-5">Back</button>
</div>