@{
	ViewData["Title"] = "Staff-Supplier-Page";
}

<a asp-controller="Suppliers" asp-action="AddSupplier" class="btn btn-primary d-flex align-items-center float-end">
	Add new Supplier
	<i class="fa-solid fa-circle-plus"></i>
</a>
<table class="table">
	<tr>
		<th>Supplier Name</th>
		<th>Category</th>
	</tr>
	<tr onclick="location.href = '@(Url.Action("DetailProduct", "Supplier"))'">
		<td>NguyenA</td>
		<td>Rose</td>
		<td style="width: 32px">
			<a asp-controller="Suppliers" asp-action="EditSupplier" class="" style="width: fit-content">
				<i class="fa-regular fa-pen-to-square"></i>
			</a>
		</td>
		<td>
			<a asp-controller="Suppliers" asp-action="DeleteSupplier">
				<i class="fa-solid fa-xmark"></i>
			</a>
		</td>
	</tr>
</table>
