@using FlowerShopManagement.Web.Views.Shared.Components;

@{
	ViewData["Title"] = "Order Page";
}

<div class="row mt-3">
	<div class="col-6">
		<div>
			<p class="h3 mb-3">Order</p>
			<component type="typeof(OrderCardItem)" render-mode="Static" />
			<component type="typeof(OrderCardItem)" render-mode="Static" />
		</div>
	</div>
	<div class="col-2"></div>
	<div class="col-4 d-flex flex-column justify-content-between">
		<div>
			<div class="">
				<p class="h3 mb-2">Information</p>
				<div>
					<p class="m-0">Customer Name</p>
					<p class="m-0">094xxxxxx73</p>
					<p class="m-0">Di An, Binh Duong</p>
				</div>
			</div>
			<div class="mt-4 row">
				<div class="col-6">
					<p class="h3 mb-2">Payment Method</p>
					<div class="form-check">
						<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
						<label class="form-check-label" for="inlineRadio1">cash</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
						<label class="form-check-label" for="inlineRadio1">atm</label>
					</div>
				</div>
				<div class="col-6">
					<p class="h3 mb-2">Delivery Method</p>
					<div class="form-check">
						<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
						<label class="form-check-label" for="inlineRadio1">fast</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
						<label class="form-check-label" for="inlineRadio1">normal</label>
					</div>
				</div>
			</div>
		</div>
		<div>
			<div class="mt-5">
				<p class="h3 mb-2">Voucher</p>
				<div class="w-100 d-flex">
					<input class="flex-grow-1 form-control" type="text" />
					<button class="btn btn-primary">Check</button>
				</div>
			</div>
			<div class="mt-5 d-flex justify-content-between">
				<p class="h3 text-primary">Total</p>
				<p class="h3 text-primary">$20</p>
			</div>
			<div class="mt-2 d-flex justify-content-between">
				<p class="caption">Discount</p>
				<p class="caption">20.000</p>
			</div>
			<div class="mt-2 d-flex justify-content-between">
				<p class="h2">Balance</p>
				<p class="h2">$40</p>
			</div>
			<button class="btn btn-primary w-100 mt-4">Confirm Order and Pay</button>
		</div>
	</div>
</div>

