@model OrderModel

<div class="w-100 d-flex flex-column align-items-center mb-5">
	<div class="col-12 col-md-10 col-lg-9 bg-dark shadow" style="padding: 36px 24px 36px 24px;">
		<div class="d-flex justify-content-between text-light">
			<div class="">
				<p class="h4">Status</p>
				<p class="h5 text-primary">@Model.Status</p>
			</div>
			<div class="">
				<p class="caption">Ordered By @Model.Date</p>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-12 col-lg-7">
				@if (Model.Products.Count > 0)
				{
					@foreach (var item in Model.Products)
					{
						<component type="typeof(OrderCardItem)" render-mode="ServerPrerendered" param-orderDetail=@item param-orderDetailId=@item.Id />
					}
				}
			</div>
			<div class="col-12 col-lg-5 mt-4 mt-lg-0 text-light">
				<div class="d-grid gap-2">
					<p class="h4">Customer</p>
					<p class="h5">@Model.FullName</p>
					<p class="h5">@Model.PhoneNumber</p>
					<p class="h5">@Model.Address</p>
				</div>
			</div>
		</div>

		<div class="text-light mt-4 mt-lg-5 row">
			<div class="d-grid gap-2 col-7">
				<p class="h4">Payment</p>
				<p class="h5">Cash</p>
			</div>
			<div class="d-grid gap-2 col-5">
				<p class="h4">Delivery</p>
				<p class="h5">@Model.DeliveryMethod</p>
			</div>
		</div>

		<div class="w-100 mt-5 text-light">
			<div class="d-flex flex-column justify-content-between w-100">
				<div class="">
					<div class="d-flex justify-content-between">
						<span class="caption">Items Amount</span>
						<span class="caption">@Model.Amount</span>
					</div>
					<div class="d-flex justify-content-between mt-2">
						<span class="h6">Price</span>
						<span class="h6">$@Model.Total</span>
					</div>
					<div class="d-flex justify-content-between mt-2">
						<span class="caption">Delivery Fee</span>
						<span class="caption">$@Model.DeliveryCharge</span>
					</div>
					<div class="d-flex justify-content-between h2 mt-2 text-primary">
						<span>Total</span>
						<span>$@Model.Total</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>