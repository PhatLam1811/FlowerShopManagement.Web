@model UserModel

@{
	ViewData["Title"] = "Personal Page";
}
<div class="row">
	<div class="col-lg-3 d-lg-block collapse borderCustom1 um">
		<div class="tabCustom row-cols-6 w-100 mt-3" style="max-height:260px;">
			<button class="tabCustom" style="height:50px;" onclick="showPartialView('@Url.Action("PersonalInformation","Profile")')" type="button">Personal Information</button>
			<button class="tabCustom" style="height:50px;" onclick="showPartialView('@Url.Action("ChangePassword","Profile")')" type="button">Change Password</button>
			<button class="tabCustom" style="height:50px;" onclick="showPartialView('@Url.Action("ManageAddress","Profile")')" type="button">Manage Address</button>
			<button class="tabCustom" style="height:50px;" onclick="showPartialView('@Url.Action("Voucher","Profile")')" type="button">Voucher</button>
			<button class="tabCustom" style="height:50px;" onclick="showPartialView('@Url.Action("ManageAccount","Profile")')" type="button">Manage Account</button>
		</div>
	</div>


	<div class="col-lg-9 col-12 mt-3 mt-lg-0">
		<div class="d-flex justify-content-end d-lg-none">
			<button class="filter-icon border-0 fs-3" data-bs-toggle="collapse" data-bs-target=".um" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="h5">Menu</span>
			</button>
		</div>
		<div id="pw">
			@*<partial name="PersonalInformation" model="@Model"/>*@
			<form asp-action="PersonalInformation" asp-controller="Profile" class="mt-3" enctype="multipart/form-data" onsubmit="return showPartialView1(this);">
	<div class="row">
		<div class="col-8">
			<div class="row">
				<div class="col form-group">
					<input asp-for="_id" hidden/>
					<label class="form-label" for="exampleFormControlInput1">Name</label>
					<input type="text" asp-for="Name" class="form-control form-control-lg h5 py-3" placeholder="">
					<span asp-validation-for="Name"></span>
				</div>
				<div class="col form-group">
					<label class="form-label" for="exampleFormControlInput1">Gender</label>
					<input type="text" asp-for="Gender" class="form-control form-control-lg h5 py-3" placeholder="">
					<span asp-validation-for="Gender"></span>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col form-group">
					<label class="form-label" for="exampleFormControlInput1">BirthYear</label>
					<input type="date" asp-for="BirthYear" class="form-control form-control-lg h5 py-3" placeholder="">

					<span asp-validation-for="BirthYear"></span>
				</div>
				<div class="col form-group">
					<label class="form-label" for="exampleFormControlInput1">Phone</label>
					<input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg h5 py-3" placeholder="">
					<span asp-validation-for="PhoneNumber"></span>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col form-group">
					<label class="form-label" for="exampleFormControlInput1">Email</label>
					<input type="email" asp-for="Email" class="form-control form-control-lg h5 py-3" placeholder="">
					<span asp-validation-for="Email"></span>
				</div>
			</div>
		</div>
		<div class="col-4">
			@if(Model != null && Model.Avatar != null&& Model.Avatar != "" )
			{
				<img src="~/avatar/@Model.Avatar" alt="avatar" class="w-100 h-auto" />
				<input asp-for="Avatar" hidden/>

			}
			else
			{
				<img src="~/image/avt2.png" alt="avatar" class="w-100 h-auto" />
				<input asp-for="Avatar" value="avt2.png" hidden />

			}
			<div class="form-group mt-3">
				
				<input asp-for="FormFile" style="border-width:0px" accept="image/*" class="form-control" />

			</div>
		</div>
	</div>
	

	<button class="btn btn-primary w-100 mt-5" >Apply changes</button>
</form>
		</div>
	</div>

</div>