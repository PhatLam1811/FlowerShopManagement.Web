@model ChangePasswordModel

@{
    ViewData["Title"] = "Change Password";
}

<h2 class="mt-4">@ViewData["Title"]</h2>

<div class="row">
	<form class="mt-3 col-4">
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">Old Password</label>
			<input type="text" asp-for="OldPassword" class="form-control form-control-lg h5 py-3" placeholder="">
			<span asp-validation-for="OldPassword"></span>
		</div>
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">New Password</label>
			<input type="text" asp-for="NewPassword" class="form-control form-control-lg h5 py-3" placeholder="">
			<span asp-validation-for="NewPassword"></span>
		</div>
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">Confirm New Password</label>
			<input type="text" asp-for="ConfirmPassword" class="form-control form-control-lg h5 py-3" placeholder="">
			<span asp-validation-for="ConfirmPassword"></span>
		</div>


		<button class="mt-5 btn btn-primary w-100">Submit</button>
	</form>
</div>