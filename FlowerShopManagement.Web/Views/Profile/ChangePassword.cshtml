@model ChangePasswordModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
	<form class="mt-3 col-4" asp-action="ChangePassword" asp-controller="Profile"onsubmit="return showPartialView1(this);">
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">Old Password</label>
			<input type="password" asp-for="OldPassword" class="form-control form-control-lg h5 py-3" placeholder="">
			<span asp-validation-for="OldPassword"></span>
		</div>

		<div class="form-group mt-3">
			<label class="form-label" for="exampleFormControlInput1">New Password</label>
			<input type="password" asp-for="NewPassword" class="form-control form-control-lg h5 py-3" placeholder="">
			<span asp-validation-for="NewPassword"></span>
		</div>

		<div class="form-group mt-3">
			<label class="form-label" for="exampleFormControlInput1">Confirm New Password</label>
			<input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg h5 py-3" placeholder="">
			<span asp-validation-for="ConfirmPassword"></span>
		</div>

		<button class="mt-5 btn btn-primary w-100">Submit</button>
	</form>
</div>