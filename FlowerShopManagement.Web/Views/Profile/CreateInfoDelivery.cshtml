@model InforDeliveryModel
@*<h1>Create new infor delivery</h1>*@

<form asp-action="CreateInfoDelivery" asp-controller="Profile" method="post" onsubmit="return addAddress(this);" >
    <div class="">
        <div class="flex-grow-1">
            @if (Model.IsDefault)
            {
                <p class="h4 text-secondary mb-3">Default</p>
            }
            <div class="d-flex flex-column gap-3">
                <div class="form-group">
                    <label class="form-label">Name:</label>
                    <input type="text" asp-for="Name" class="form-control form-control-lg h5 py-3" placeholder="">
                </div>
                <div class="form-group">
                    <label class="form-label">Phone:</label>
                    <input type="text" asp-for="Phone" class="form-control form-control-lg h5 py-3" placeholder="">
                </div>
                <div class="form-group">
                    <label class="form-label">Address:</label>
                    <input type="text" asp-for="Address" class="form-control form-control-lg h5 py-3" placeholder="">
                </div>
            </div>
        </div>
        <div class="d-flex flex-column gap-2">
            <button class="btn-no-min btn-secondary">Submit</button>

        </div>
    </div>
</form>