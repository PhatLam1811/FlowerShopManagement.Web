@{
	ViewData["Title"] = "Cart Page";
}

<div class="cart-page mt-5">
	<div class="cart-item-part">
		<div class="cart-item">
			<input type="checkbox" name="" value="" />
			<div class="cart-item-card">
				<div class="cart-item-image"></div>
				<div class="cart-item-body">
					<div>
						<span class="text-title">Product name</span>
						<i class="fa-solid fa-angle-right"></i>
					</div>
					<div class="mt-1">
						<span class="cart-item-price">20.000</span>
						<span class="cart-item-total-price">20.000</span>
					</div>
					<div>
						<div class="product-quantity">
							<button class="product-quantity-control">
								<i class="fa-solid fa-minus"></i>
							</button>
							<input />
							<button class="product-quantity-control">
								<i class="fa-solid fa-plus"></i>
							</button>
						</div>
						<i class="fa-solid fa-trash cart-item-icon-delete"></i>
					</div>
				</div>
			</div>
		</div>

		<div class="cart-item">
			<input type="checkbox" name="" value="" />
			<div class="cart-item-card">
				<div class="cart-item-image"></div>
				<div class="cart-item-body">
					<div>
						<span class="text-title">Product name</span>
						<i class="fa-solid fa-angle-right"></i>
					</div>
					<div class="mt-1">
						<span class="cart-item-price">20.000</span>
						<span class="cart-item-total-price">20.000</span>
					</div>
					<div>
						<div class="product-quantity">
							<button class="product-quantity-control">
								<i class="fa-solid fa-minus"></i>
							</button>
							<input />
							<button class="product-quantity-control">
								<i class="fa-solid fa-plus"></i>
							</button>
						</div>
						<i class="fa-solid fa-trash cart-item-icon-delete"></i>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="cart-price-part col-3">
		<div class="">
			<h5>Total</h5>
			<h5>20.000</h5>
		</div>
		<div class="mt-2">
			<span class="text-caption">Discount</span>
			<span class="text-caption fw-bolder">20.000</span>
		</div>
		<div class="mt-3">
			<h4>Balance</h4>
			<h4>20.000</h4>
		</div>
		<a asp-controller="Order" asp-action="Index" class="btn btn-primary w-100 mt-4">
			Buy Now
		</a>
	</div>
</div>