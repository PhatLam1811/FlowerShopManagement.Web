@using FlowerShopManagement.Core.Enums;

@model SupplierDetailModel

@{

}

<p class="mt-4"></p>
<span class="h1">Create new User</span>

<form asp-action="Create" asp-area="Admin" asp-controller="User" class="row mt-3">
	<div class="col-6">
		<div class="row mt-3">
			<div class="col-7 form-group">
				<label class="form-label" for="exampleFormControlInput1">Name</label>
				<input type="text" asp-for="Name" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col-5 form-group">
				<label class="form-label" for="exampleFormControlInput1">Phone Number</label>
				<input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Email</label>
				<input type="email" asp-for="Email" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Description</label>
				<input type="text" asp-for="Description" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Address</label>
				<div class="d-flex">
					<input type="text" asp-for="Address" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
				</div>
			</div>
		</div>
		<div class="mt-5 d-flex gap-3">
			<a class="btn btn-secondary">Back to List</a>
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</div>

	<div class="col-6">
		@*img*@
	</div>
</form>


