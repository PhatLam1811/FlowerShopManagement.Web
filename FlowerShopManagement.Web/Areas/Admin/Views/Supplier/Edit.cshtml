@using FlowerShopManagement.Core.Enums;

@model SupplierModel

<p class="mt-4"></p>
<span class="h1">Supplier Info</span>

<form asp-action="EditAsync" asp-area="Admin" asp-controller="Supplier" method="post" class="row mt-3">
	<input asp-for="_id" hidden/>
	<div class="col-6">
		<div class="row mt-3">
			<div class="col-7 form-group">
				<label class="form-label" for="exampleFormControlInput1">Name</label>
				<input type="text" asp-for="Name" class="form-control form-control-lg h5 py-3" placeholder="">
			</div>
			<div class="col-5 form-group">
				<label class="form-label" for="exampleFormControlInput1">Phone Number</label>
				<input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg h5 py-3" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Email</label>
				<input type="email" asp-for="Email" class="form-control form-control-lg h5 py-3" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Description</label>
				<input type="text" asp-for="Description" class="form-control form-control-lg h5 py-3" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				<label class="form-label" for="exampleFormControlInput1">Address</label>
				<div class="d-flex">
					<input type="text" asp-for="Address" style="font-family:'Open Sans'" class="form-control form-control-lg h5 py-3" placeholder="">
				</div>
			</div>
		</div>

		<div class="mt-5 d-flex gap-3">
			<button class="btn btn-secondary" href="##" onclick="history.go(-1); return false;">Back to List</button>
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<button class="btn btn-remove mt-3" asp-action="RemoveAsync" asp-area="Admin" asp-controller="Supplier" asp-route-id="@Model._id">Remove</button>
	</div>

	<div class="col-6">
		@*img*@
	</div>
</form>


