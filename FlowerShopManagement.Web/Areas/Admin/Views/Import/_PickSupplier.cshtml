@model List<SupplierModel>?


<div class="row">
	<div class="col p-0 mt-2">
		<div class="col d-flex flex-column gap-2">
			<div class="d-flex flex-row">
				<div class="container">
					<div class="row mt-3">
						<div class="">
							<div class="table-wrap" style="height: 530px">
								<table class="table myaccordion table-hover" id="accordion">
									<thead>
										<tr>
											<th>#</th>
											<th class="button">Name</th>
											<th class="button">Phone</th>
											<th class="button">Email</th>
										</tr>
									</thead>
									<tbody>
										@if (Model != null)
										{
											int id = 0;

											@foreach (var i in Model)
											{
												id++;

												@*													<input name="supplierIds" value="@i._id" hidden />*@
												<tr data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="collapsed w-100">

													<td>
														@id
													</td>
													<td>@i.Name</td>
													<td>@i.PhoneNumber</td>
													<td>@i.Email</td>
													<td>
														<div class="form-floating">
															<input type="radio" class="form-check-input fs-5" value="@i._id" name="supplierIds" />
														</div>
													</td>
												</tr>
											}
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

