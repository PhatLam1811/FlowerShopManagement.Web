<div class="table-wrap">
    <table class="table myaccordion table-hover" id="accordion">
        <thead>
            <tr>
                <th>#</th>
                <th class="button">Code</th>
                <th class="button">Supplier</th>
                <th class="button">Price</th>
                <th class="button">Create Date</th>
                <th class="button">
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                var i = 0;
                foreach (var item in Model)
                {
                    i++;

                    <tr data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="collapsed align-middle">

                        <th scope="row">@i</th>
                        <td>
                            
                        </td>
                        <td></td>
                        <td>$</td>
                        <td></td>
                        <td>
                            <a href="@Url.Action("Edit","Import",new {id = @item.Id})" id="@item.Id" class="border-1 table-icon">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>


</div>