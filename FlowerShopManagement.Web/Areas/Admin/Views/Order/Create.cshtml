@using FlowerShopManagement.Web.ViewModels

@model OrderVM

@*ADMIN Creating Order*@
@{
    this.Model.isOkay = true;
}

<p class="mt-4"></p>
<span class="h1">Create new Order</span>

<form method="post" asp-action="Create" asp-area="Admin" asp-controller="Order" class="row mt-3">

    <div class="col-8">
        <span class="h3 text-color-secondary">Products</span>

        @*Current picked items*@
        <div id="picked-items"> <partial name="_PickedItemsTable" model=@Model.CurrentProductModels /></div>


        <div class="mt-3">
            <button class="btn btn-secondary" type="button" id="btn-pickitemdialog"
                    onclick="OpenPostDialog('@(Url.Action("PickItemDialog", "Order"))','Current Products')">
                Pick item
            </button>
        </div>
    </div>

    @*Customer Infomation*@
    <div class="col-4">
        <div id="picked-cus"> <partial name="_PickedCustomerTable" model=@Model.CurrentCustomer /> </div>
        <div class="mt-3">
            <button class="btn btn-secondary" type="button"
                    onclick="OpenPostDialog('@(Url.Action("PickCustomerDialog", "Order"))','Current Customers')">
                Pick customer
            </button>
        </div>
    </div>
    <div class="mt-5 d-flex justify-content-end gap-3">
        <a class="btn btn-secondary" asp-action="Index" asp-area="Admin" asp-controller="Order">Back to List</a>
        <button type="submit" class="btn btn-primary" id="btn-submitorder">Submit</button>
    </div>
</form>
