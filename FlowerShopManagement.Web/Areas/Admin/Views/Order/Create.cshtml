@model OrderModel

@{
	Model.Products.Add(new ProductModel(amount: 2, id: "hihi") { Name = "F hoa", UniPrice = 20 });
}

<p class="mt-4"></p>
<span class="h1">Create new Order</span>

<form asp-action="Create" asp-area="Admin" asp-controller="Order" class="row mt-3">

	<div class="col-7">
		<span class="h3 text-color-secondary">Products</span>

		<div class="table-wrap">
			<table class="table myaccordion table-hover" id="accordion">
				<thead>
					<tr>
						<th>#</th>
						<th>Product Name</th>
						<th>Color</th>
						<th>Price</th>
						<th>Amount</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@for (var i = 1; i <= Model.Products.Count; i++)
					{
						<tr data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="collapsed align-middle">

							<th scope="row">@i</th>
							<td>@Model.Products[i-1].Name</td>
							<td>@Model.Products[i-1].Name</td>
							<td>$@Model.Products[i-1].UniPrice</td>
							<td>@Model.Products[i-1].Amount</td>
							<td>
								<a class="border-1 table-icon text-secondary">
									<i class="fa-solid fa-trash-can"></i>
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>

		<div class="mt-3">
			<a class="btn btn-secondary">Pick item</a>
		</div>
	</div>

	<div class="col-5">
		<span class="h3 text-color-secondary">Customer</span>
		<div class="row mt-3">
			<div class="col-7 form-group">
				<label class="form-label" for="exampleFormControlInput1">Name</label>
				<input type="text" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col-5 form-group">
				<label class="form-label" for="exampleFormControlInput1">Phone</label>
				<input type="tel" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder=""> @*Change to select form*@
			</div>
		</div>
		<div class="row">
			<div class="col-7 form-group">
				<label class="form-label" for="exampleFormControlInput1">Email</label>
				<input type="email" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col-5 form-group">
				<label class="form-label" for="exampleFormControlInput1">Birthday</label>
				<input type="date" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">Address</label>
			<input type="text" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
		</div>

		<div class="mt-5 d-flex justify-content-end gap-3">
			<a class="btn btn-secondary">Back to List</a>
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</div>
</form>
