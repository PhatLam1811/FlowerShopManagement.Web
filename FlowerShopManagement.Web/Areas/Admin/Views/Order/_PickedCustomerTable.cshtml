@model UserDetailsModel?

@if (Model == null)
{
    <span class="h3 text-color-secondary">Customer</span>
    <div class="row mt-3">
        <div class="col-7 form-group">
            <label class="form-label" for="exampleFormControlInput1">Name</label>
            <input type="text" name="Name" class="form-control form-control-lg h5 py-3" id="ip-cusname" placeholder="">
        </div>
        <div class="col-5 form-group">
            <label class="form-label" for="exampleFormControlInput1">Phone</label>
            <input type="tel" name="PhoneNumber" class="form-control form-control-lg h5 py-3" id="ip-cusphone" placeholder=""> @*Change to select form*@
        </div>
    </div>
    <div class="row">
        <div class="col-7 form-group">
            <label class="form-label" for="exampleFormControlInput1">Email</label>
            <input type="email" name="Email" class="form-control form-control-lg h5 py-3" id="ip-cusemail" placeholder="">
        </div>
        <div class="col-5 form-group">
            <label class="form-label" for="exampleFormControlInput1">Birthday</label>
            <input type="date" class="form-control form-control-lg h5 py-3" id="ip-cusbirth" placeholder="">
        </div>
    </div>
    <div class="form-group">
        <label class="form-label" for="exampleFormControlInput1">Address</label>
        <input type="text" class="form-control form-control-lg h5 py-3" id="ip-cusaddress" placeholder="">
    </div>
}
else
{
    <span class="h3 text-color-secondary">Customer</span>
    <div class="row mt-3">
        <div class="col-7 form-group">
            <label class="form-label" for="exampleFormControlInput1">Name</label>
            <input type="text" name="Name" class="form-control form-control-lg h5 py-3" value="@Model.Name" id="exampleFormControlInput1" placeholder="">
        </div>
        <div class="col-5 form-group">
            <label class="form-label" for="exampleFormControlInput1">Phone number</label>
            <input type="tel" name="PhoneNumber" class="form-control form-control-lg h5 py-3" value="@Model.PhoneNumber" id="exampleFormControlInput1" placeholder=""> @*Change to select form*@
        </div>
    </div>
    <div class="row">
        <div class="col-7 form-group">
            <label class="form-label" for="exampleFormControlInput1">Email</label>
            <input type="email" name="Email" class="form-control form-control-lg h5 py-3" value="@Model.Email" id="exampleFormControlInput1" placeholder="">
        </div>
        <div class="col-5 form-group">
            <label class="form-label" for="exampleFormControlInput1">Birth</label>
            <input type="date" class="form-control form-control-lg h5 py-3" value="@Model.BirthYear" id="exampleFormControlInput1" placeholder="">
        </div>
    </div>
    @if (Model.Addresses != null && Model.Addresses.Count() > 0)
    {
        <div class="form-group">
            <label class="form-label" for="exampleFormControlInput1">Addresses</label>
            <input type="text" class="form-control form-control-lg h5 py-3" value="@Model.Addresses[0]" id="exampleFormControlInput1" placeholder="">
        </div>
    }
    

}
