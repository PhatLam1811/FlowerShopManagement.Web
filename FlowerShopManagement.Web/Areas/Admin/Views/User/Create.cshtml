@using FlowerShopManagement.Core.Enums;

@model UserModel

@{
    var roles = ViewData["Roles"] as List<Role> ?? new List<Role>();
    var genders = ViewData["Genders"] as List<Gender> ?? new List<Gender>();
    if (Model != null)
    {
        Model.BirthYear = new DateTime(1970, 1, 1, 0, 0, 0, 0, DateTimeKind.Utc);
    }
}

<p class="mt-4"></p>
<span class="h1">Create new User</span>

<form asp-action="Create" method="post" asp-area="Admin" asp-controller="User" class="row mt-3" enctype="multipart/form-data">
    <div class="col-6">
        <div class="row mt-3">
            <div class="col-7 form-group">
                <label class="form-label" for="exampleFormControlInput1">Name</label>
                <input type="text" asp-for="Name" class="form-control form-control-lg h5 py-3" id="ip-name" placeholder="">
            </div>
            <div class="col form-group">
                <label class="form-label" for="floatingSelect">Role</label>
                <select class="form-select form-select-lg h5 py-3"
                        asp-for="Role" asp-items="@(new SelectList(roles))" id="floatingSelect"
                        aria-label="Floating label select example" required>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-6 form-group">
                <label class="form-label" for="exampleFormControlInput1">Email</label>
                <input type="email" asp-for="Email" class="form-control form-control-lg h5 py-3" id="ip-email" placeholder="">
            </div>
            <div class="col-6 form-group">
                <label class="form-label" for="exampleFormControlInput1">Phone</label>
                <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg h5 py-3" id="ip-phone" placeholder="">
            </div>

            <input type="date" hidden asp-for="CreatedDate" class="form-control form-control-lg h5 py-3" placeholder="">

        </div>
        <div class="row">
            <div class="col form-group">
                <label class="form-label" for="exampleFormControlInput1">Birthday</label>
                <input type="date" asp-for="BirthYear" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
            </div>
            <div class="col form-group">
                <label class="form-label" for="floatingSelect">Gender</label>
                <select class="form-select form-select-lg h5 py-3" asp-for="Gender" asp-items="@(new SelectList(genders))" id="floatingSelect" aria-label="Floating label select example" required>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label class="form-label" for="exampleFormControlInput1">Address</label>
                @if (Model != null && Model.Addresses != null && Model.Addresses.Length > 0)
                {
                    <div class="d-flex">
                        <input type="text" asp-for="Addresses[0]" class="form-control form-control-lg h5 py-3" id="ip-address" placeholder="">
                    </div>
                }
            </div>
        </div>
        <div class="mt-5 d-flex gap-3">
            <a class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-primary" id="btn-submit">Submit</button>
        </div>
    </div>

    <div class="col-6">
        @*add image*@
        <img src="~/image/flower1.png"
             class="w-100 h-auto"
             asp-append-version="true" />
        <div class="form-floating">
            <input asp-for="FormFile" style="border-width:0px" accept="image/*" class="form-control" />
            @*<label for="FormPicture">Image</label>*@
        </div>
    </div>
</form>


