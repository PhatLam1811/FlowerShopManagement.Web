@using FlowerShopManagement.Core.Enums
@model ProductDetailModel
@{
	List<Categories>? categories = ViewData["Categories"] as List<Categories> ?? null;
}
<p class="mt-4"></p>
<span class="h1">Create new Product</span>

<form asp-action="Create" asp-area="Admin" asp-controller="Product" class="row mt-3">

	<div class="col-6">
		<div class="row">
			<div class="col-8 form-group">
				<label class="form-label" for="exampleFormControlInput1">Name</label>
				<input type="text" asp-for="Name" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col-4 form-group">
				<label class="form-label" for="exampleFormControlInput1">Color</label>
				<input type="text" asp-for="Color" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="col-4 form-group">
				<label class="form-label" for="exampleFormControlInput1">Size</label>
				<input type="text" asp-for="Size" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col-8 form-group">
				<label class="form-label" for="exampleFormControlInput1">Material</label>
				<input type="text" asp-for="Material" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="col form-group">
				<label class="form-label" for="exampleFormControlInput1">Price</label>
				<input type="number" asp-for="UniPrice" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>

			<div class="col form-group">
				<label class="form-label" for="exampleFormControlInput1">Amount</label>
				<input type="number" asp-for="Amount" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col form-group">
				<label class="form-label" for="selectCategory">Category</label>
				<select class="form-select form-select-lg h5 py-3" name="Categories" asp-items="@(new SelectList(categories))" id="selectCategory" aria-label="Floating label select example">
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">Maintainment</label>
			<textarea type="text" asp-for="Maintainment" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder=""></textarea>
		</div>
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">Description</label>
			<textarea type="text" asp-for="Description" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder=""></textarea>
		</div>

		<div class="mt-5 d-flex gap-3">
			<button type="submit" class="btn btn-primary">Submit</button>
			<a class="btn btn-secondary">Back to List</a>
		</div>
	</div>

	<div class="col-4">
		@*add image*@
		<img src="~/image/flower1.png"
			 class="w-100 h-auto"
			 asp-append-version="true" />
		<div class="form-floating">
			<input asp-for="FormPicture" accept="image/*" class="form-control" />
			<label for="FormPicture">Image</label>
		</div>
	</div>
</form>
