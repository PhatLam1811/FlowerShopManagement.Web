@model ProductDetailModel

<p class="mt-4"></p>
<span class="h1">Edit new Product</span>

<form method="post" asp-action="Update" asp-area="Admin" asp-controller="Product" class="row mt-3">
	<input asp-for="Id" hidden/>
	<div class="col-6">
		<div class="row">
			<div class="col-8 form-group">
				<label class="form-label" for="exampleFormControlInput1">Name</label>
				<input type="text" asp-for="@Model.Name" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col-4 form-group">
				<label class="form-label" for="exampleFormControlInput1">Color</label>
				<input type="text" asp-for="@Model.Color" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="col-4 form-group">
				<label class="form-label" for="exampleFormControlInput1">Dimension</label>
				<input type="text" asp-for="@Model.Size" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
			<div class="col-8 form-group">
				<label class="form-label" for="exampleFormControlInput1">Material</label>
				<input type="text" asp-for="@Model.Material" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="row">
			<div class="col form-group">
				<label class="form-label" for="exampleFormControlInput1">Price</label>
				<input type="number" asp-for="@Model.UniPrice" class="form-control form-control-lg h5 py-3" id="ip-price" placeholder="">
			</div>

			<div class="col form-group">
				<label class="form-label" for="exampleFormControlInput1">Amount</label>
				<input type="number" asp-for="@Model.Amount" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder="">
			</div>
		</div>
		<div class="form-group">
			<label class="form-label" for="exampleFormControlInput1">Description</label>
			<textarea type="text" asp-for="@Model.Description" class="form-control form-control-lg h5 py-3" id="exampleFormControlInput1" placeholder=""></textarea>
		</div>

		<div class="mt-5 d-flex gap-3">
			<button type="submit" class="btn btn-primary" id="btn-submit">Submit</button>
			<a class="btn btn-secondary"asp-action="Index" asp-controller="Product" asp-area="Admin">Back to List</a>
		</div>

		<a class="btn btn-remove mt-3" id="btn-delete" asp-route-id="@Model.Id" asp-action="Delete" asp-controller="Product" asp-area="Admin">Remove</a>
	</div>

	<div class="col-4">
		@*add image*@
		<img src="~/image/flower1.png"
			 class="w-100 h-auto"
			 asp-append-version="true" />
		<div class="form-floating">
			<input asp-for="FormPicture" accept="image/*" class="form-control" />
			<label for="FormPicture">Image</label>
		</div>
	</div>
</form>
