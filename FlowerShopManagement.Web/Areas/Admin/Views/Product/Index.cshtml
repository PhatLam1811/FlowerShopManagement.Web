@using FlowerShopManagement.Web
@model PaginatedList<ProductModel>

@{
    List<string> categories = new List<string> { "Fa ke flower", "cay canh" };
    List<string> prices = new List<string> { "0 - 10", "11 - 50", ">50" };

    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}


<div class="row">
    <div class="mt-3 col">
        <div class="col">
            <span class="h4">Filter</span>
            <div class="check-list mt-4">
                <span class="">Categories</span>
                <label class="check-list-item">
                    <input type="radio" class="form-check-input" value="" name="categoryRadio" checked />
                    All
                </label>
                @foreach (var i in categories)
                {
                    <label class="check-list-item">
                        <input type="radio" class="form-check-input" value="" name="categoryRadio" />
                        @i
                    </label>
                }
            </div>
            <div class="check-list">
                <span class="">Prices</span>
                <label class="check-list-item">
                    <input type="radio" class="form-check-input" value="" name="priceRadio" checked />
                    All
                </label>
                @foreach (var i in prices)
                {
                    <label class="check-list-item">
                        <input type="radio" class="form-check-input" value="" name="priceRadio" />
                        @i
                    </label>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-10 col-12">
        <div class="d-flex d-lg-block justify-content-between">
            <button class="filter-icon border-0 d-lg-none fs-3" data-bs-toggle="collapse" data-bs-target=".um" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="h5">Filter</span>
            </button>
            <div class="d-flex w-100">
                <div class="form-group flex-grow-1">
                    <input type="text" class="form-control form-control-lg h5 h-100 position-relative" style="z-index:99" id="floatingInput" placeholder="Abc">
                </div>
                <button class="btn btn-icon border border-primary position-relative" style="z-index:999">
                    Search
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="" id="hihi">
                <partial name="_ViewAll" model=@Model view-data="ViewData" />

            </div>
            <nav class="container" id="pagination">
                <partial name="_pagination" model=@Model view-data="ViewData" />
            </nav>
        </div>
    </div>
</div>

<div class="position-fixed d-flex flex-column gap-2 align-items-end" style="width:fit-content; bottom:60px; right:0">
    <a class="btn btn-primary rounded" onclick="showContent2('@(Url.Action("AddCategory", "Product"))','Shoe Categories')">Category</a>
    <a asp-action="Create" asp-controller="Product" asp-area="Admin" class="border-1 table-icon btn btn-primary icon-plus rounded" style="width:fit-content">
    </a>
</div>